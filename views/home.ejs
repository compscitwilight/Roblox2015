    <div id="content">
        <div id="greeting-div">
            <a href="/users/<%=session.user.id%>/profile">
                <img id="user-headshot" src=<%=session.user.avatarCdn%>>
            </a>
            <h1 id="greeting">Hello, <%=session.user.username%>!</h1>
        </div>
        <div id="friends-container"></div>
        <div id="games"></div>
    </div>
</body>
