<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/public/styles/global.css" rel="stylesheet">
    <link href="/public/styles/topbar.css" rel="stylesheet">
    <link href="/public/styles/home.css" rel="stylesheet">
    <link href="/public/styles/ads.css" rel="stylesheet">
    <link href="/public/styles/sidebar.css" rel="stylesheet">
    <link href="/public/images/favicon.svg" rel="icon" type="image/svg+xml">
    <title>ROBLOX.com</title>
</head>
<body>
    <%-include("../public/components/topbar.ejs", {session: session})%>
    <% if (session.authenticated) { %>
        <div id="sidebar">
            <a href="/users/<%=session.user.id%>/profile" id="sidebar-username"><%= session.user.username%></a>
            <hr id="sidebar-hr">
            <ul id="sidebar-navigation">
                <li class="sidebar-route">
                    <a href="/home">Home</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/profile">Profile</a>
                </li>
                <li class="sidebar-route">
                    <a href="/messages">Messages</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/friends">Friends</a>
                </li>
                <li class="sidebar-route">
                    <a href="/character">Character</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/inventory">Inventory</a>
                </li>
                <li class="sidebar-route">
                    <a href="/trade">Trade</a>
                </li>
                <li class="sidebar-route">
                    <a href="/groups">Groups</a>
                </li>
                <li class="sidebar-route">
                    <a href="/forum">Forum</a>
                </li>
                <li class="sidebar-route">
                    <a href="/blog">Blog</a>
                </li>
            </ul>
        </div>
    <%}%>
