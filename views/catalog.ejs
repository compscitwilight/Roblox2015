<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/public/styles/global.css" rel="stylesheet">
    <link href="/public/styles/topbar.css" rel="stylesheet">
    <link href="/public/styles/home.css" rel="stylesheet">
    <link href="/public/styles/ads.css" rel="stylesheet">
    <link href="/public/styles/sidebar.css" rel="stylesheet">
    <link href="/public/images/favicon.svg" rel="icon" type="image/svg+xml">
    <title>Avatar Items, Virtual Avatars, Virtual Goods</title>
</head>
<body>
    <div id="topbar">
        <a href="/">
            <img src="/public/images/logo-full.png" alt="Roblox 2015 Clone" id="topbar-logo">
        </a>
        <a href="/games">Games</a>
        <a href="/catalog">Catalog</a>
        <a href="/develop">Develop</a>
        <a href="/robux">ROBUX</a>
        <input id="search-bar" type="text" placeholder="Search">
        <div id="topbar-right">
            <% if (!session.authenticated) { %>
                <a href="/">Sign Up</a>
                <a href="/">Log In</a>
            <% } else { %>
                <div id="robux">
                    <img src="/public/images/robux.png">
                    <a href="/robux" id="topbar-robux"><%= session.user.robux %></a>
                </div>
                <div id="tickets">
                    <a href="/develop" id="topbar-tickets"><%= session.user.tickets %></a>
                </div>
                <img src="/public/images/settings-icon.png" id="topbar-settings">
            <% } %>
        </div>
    </div>
    <% if (session.authenticated) { %>
        <div id="sidebar">
            <a href="/users/<%=session.user.id%>/profile" id="sidebar-username"><%= session.user.username%></a>
            <hr id="sidebar-hr">
            <ul id="sidebar-navigation">
                <li class="sidebar-route">
                    <a href="/home">Home</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/profile">Profile</a>
                </li>
                <li class="sidebar-route">
                    <a href="/messages">Messages</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/friends">Friends</a>
                </li>
                <li class="sidebar-route">
                    <a href="/character">Character</a>
                </li>
                <li class="sidebar-route">
                    <a href="/users/<%=session.user.id%>/inventory">Inventory</a>
                </li>
                <li class="sidebar-route">
                    <a href="/trade">Trade</a>
                </li>
                <li class="sidebar-route">
                    <a href="/groups">Groups</a>
                </li>
                <li class="sidebar-route">
                    <a href="/forum">Forum</a>
                </li>
                <li class="sidebar-route">
                    <a href="/blog">Blog</a>
                </li>
            </ul>
        </div>
    <%}%>
    <div id="content">
        <div id="header">
            <h1>
                <a href="/catalog" id="header-text">
                    <b>Catalog</b>
                </a>
            </h1>
            <form method="GET" id="catalog-query">
                <input type="text" name="text">
                <select name="category">
                    <option value="All Categories">All Categories</option>
                    <option value="Featured">Featured</option>
                    <option value="Collectibles">Collectibles</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Body Parts">Body Parts</option>
                    <option value="Gear">Gear</option>
                </select>
                <button type="submit">
                    <b>Search</b>
                </button>
            </form>
        </div>
    </div>
</body>
</html>